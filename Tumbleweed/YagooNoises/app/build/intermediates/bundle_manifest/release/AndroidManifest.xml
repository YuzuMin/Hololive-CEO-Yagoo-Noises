<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuzumin.yagoonoises"
    android:versionCode="1"
    android:versionName="2021.8 REV-1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yuzumin.yagoonoises.AssetDownload"
            android:exported="true" />
        <activity
            android:name="com.yuzumin.yagoonoises.SoundSettings"
            android:exported="true" />
        <activity
            android:name="com.yuzumin.yagoonoises.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.yagoonoises.Splash"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yuzumin.yagoonoises.LegalInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.yagoonoises.InfoReader"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.yagoonoises.AppMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yuzumin.yagoonoises.ClickerSettings"
            android:screenOrientation="portrait" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:exported="false" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.yuzumin.yagoonoises.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>